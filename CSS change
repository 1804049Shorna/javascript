//html part 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Document</title>
</head>
<body>
    <p id="para" >This is paragraph</p>
    <button onclick="addstyle()">Add Style</button>
    <button onclick="removestyle()">Remove Style</button>

    <script src="csschange.js"></script>
</body>
</html>

//css javascript
function addstyle(){
    var pp=document.querySelector("#para");

    pp.classList.add("para-style");


    // pp.style.color="red";
    // pp.style.fontSize="3rem";
    // pp.style.fontStyle="italic";


}

function removestyle(){

    var pp=document.querySelector("#para");
    pp.classList.remove("para-style");

    

}
